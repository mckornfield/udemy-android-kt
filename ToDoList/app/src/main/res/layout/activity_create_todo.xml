<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateTodo">

    <EditText
            android:layout_width="328dp"
            android:layout_height="50dp"
            android:inputType="textAutoCorrect|textPersonName"
            android:ems="10"
            android:id="@+id/titleEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Title"/>
    <CheckBox
            android:text="Important"
            android:layout_width="320dp"
            android:layout_height="38dp"
            android:id="@+id/importantCheckbox" app:layout_constraintStart_toStartOf="@+id/titleEditText"
            android:layout_marginTop="43dp" app:layout_constraintTop_toBottomOf="@+id/titleEditText"
            android:textSize="18sp"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton" app:layout_constraintStart_toStartOf="@+id/importantCheckbox"
            android:layout_marginTop="47dp" app:layout_constraintTop_toBottomOf="@+id/importantCheckbox"/>
</android.support.constraint.ConstraintLayout>